# Monkey patch for Python 3.12:
import collections
import collections.abc
if not hasattr(collections, 'MutableMapping'):
    collections.MutableMapping = collections.abc.MutableMapping

import cv2
import cv2.aruco as aruco
import math
import numpy as np
from dronekit import connect, VehicleMode
import time

# ---- Configuration Constants ----
MARKER_REAL_SIZE = 0.05  # Marker width in meters (e.g., 5 cm)
FOCAL_LENGTH = 800       # Estimated focal length in pixels (adjust via calibration)
GPS_TARGET_MARKER_ID = 23  # Marker ID that triggers GPS capture

# Maximum number of seconds to wait for telemetry from the vehicle.
TELEMETRY_TIMEOUT = 60

def estimate_distance(pixel_width):
    """
    Estimate distance from the camera to the marker.
    Formula: distance = (marker_real_width * focal_length) / pixel_width
    """
    if pixel_width == 0:
        return None
    return (MARKER_REAL_SIZE * FOCAL_LENGTH) / pixel_width

def get_frame(cap):
    ret, frame = cap.read()
    if not ret:
        print("Error: Unable to capture frame from camera.")
        return None
    return frame

def get_vehicle_gps(vehicle):
    """
    Retrieve the GPS coordinates from the connected Pixhawk using DroneKit.
    Returns a tuple (latitude, longitude) if available.
    """
    location = vehicle.location.global_frame
    if location.lat is not None and location.lon is not None:
        return location.lat, location.lon
    return None

def wait_for_telemetry(vehicle, timeout=TELEMETRY_TIMEOUT):
    """
    Wait up to 'timeout' seconds for basic telemetry data (like location fix and heartbeat)
    to become available from the vehicle.
    """
    start_time = time.time()
    print("Waiting for telemetry to become available...")
    while time.time() - start_time < timeout:
        # Check if vehicle has a valid GPS fix (fix_type > 1) and non-null latitude/longitude.
        fix_type = getattr(vehicle.gps_0, 'fix_type', 0)
        location = vehicle.location.global_frame
        # Alternatively, check for heartbeat with vehicle.last_heartbeat (if available)
        if fix_type > 1 and location.lat is not None and location.lon is not None:
            print("Telemetry is available.")
            return True
        time.sleep(1)
    return False

def main():
    print("Connecting to Pixhawk autopilot...")
    try:
        # Connect without waiting ready; we'll implement a custom check.
        vehicle = connect('/dev/ttyAMA0', baud=57600, wait_ready=False)
    except Exception as e:
        print("Error connecting to Pixhawk:", e)
        return

    # Wait until telemetry (GPS fix, heartbeat) becomes available or timeout is reached.
    if not wait_for_telemetry(vehicle):
        print("Telemetry did not become available within the timeout period.")
        vehicle.close()
        return

    # Open camera using a GStreamer pipeline (suitable for Raspberry Pi)
    cap = cv2.VideoCapture(
        "libcamerasrc ! video/x-raw,format=NV12,width=1920,height=1080,framerate=30/1 ! "
        "videoconvert ! videoscale ! video/x-raw,format=BGR ! appsink",
        cv2.CAP_GSTREAMER
    )
    if not cap.isOpened():
        print("Error: Could not open camera.")
        vehicle.close()
        return

    # Initialize ArUco marker detection
    aruco_dict = aruco.getPredefinedDictionary(aruco.DICT_4X4_50)
    parameters = aruco.DetectorParameters_create()

    print("Starting marker detection with centering guidance.")
    print("Adjust position until the marker is 'Centered' (within threshold) for GPS capture.")
    
    while True:
        frame = get_frame(cap)
        if frame is None:
            break

        # Determine frame dimensions and center
        frame_height, frame_width = frame.shape[:2]
        frame_center = (frame_width // 2, frame_height // 2)
        cv2.circle(frame, frame_center, 5, (255, 0, 0), -1)  # Draw center as blue dot

        # Convert frame to grayscale for marker detection.
        gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)
        corners, ids, _ = aruco.detectMarkers(gray, aruco_dict, parameters=parameters)

        if ids is not None:
            # Process the first detected marker.
            for i, marker_corners in enumerate(corners):
                aruco.drawDetectedMarkers(frame, corners, ids)
                pts = marker_corners[0]
                marker_center = (int(np.mean(pts[:, 0])), int(np.mean(pts[:, 1])))
                cv2.circle(frame, marker_center, 5, (0, 0, 255), -1)

                # Compute center offset.
                dx = marker_center[0] - frame_center[0]
                dy = marker_center[1] - frame_center[1]
                threshold = 20  # pixel threshold for centering
                guidance = []
                if dx > threshold:
                    guidance.append("Move Left")
                elif dx < -threshold:
                    guidance.append("Move Right")
                if dy > threshold:
                    guidance.append("Move Up")
                elif dy < -threshold:
                    guidance.append("Move Down")
                guidance_text = "Centered" if not guidance else ", ".join(guidance)
                cv2.putText(frame, guidance_text, (marker_center[0] - 50, marker_center[1] - 20),
                            cv2.FONT_HERSHEY_SIMPLEX, 0.7, (0, 255, 255), 2)

                # If marker is the designated one and centered, print GPS and exit.
                if ids[i][0] == GPS_TARGET_MARKER_ID and guidance_text == "Centered":
                    gps_location = get_vehicle_gps(vehicle)
                    if gps_location is not None:
                        lat, lon = gps_location
                        print(f"GPS Location captured: Latitude: {lat:.6f}, Longitude: {lon:.6f}")
                    else:
                        print("GPS location not available.")
                    cap.release()
                    cv2.destroyAllWindows()
                    vehicle.close()
                    return

                break  # Process only the first detected marker.

        cv2.imshow("ArUco Detection", frame)
        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

    cap.release()
    cv2.destroyAllWindows()
    vehicle.close()

if __name__ == '__main__':
    main()
